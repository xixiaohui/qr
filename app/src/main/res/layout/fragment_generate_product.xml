<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.GenerateProductFragment">


    <Spinner
        android:id="@+id/product_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sippner_height"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginRight="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top"
        android:dropDownWidth="match_parent"
        android:entries="@array/product_type"/>
<!--    <TextView-->
<!--        android:id="@+id/format_tips"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:textSize="@dimen/text_barcode"-->
<!--        android:layout_marginLeft="@dimen/item_generate_margin"-->
<!--        android:layout_marginRight="@dimen/item_generate_margin"/>-->
    <EditText
        android:id="@+id/input_content_product"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top"
        android:layout_marginRight="@dimen/item_generate_margin"
        android:background="@drawable/textview_border"
        android:gravity="left|top"
        android:hint="12345670"
        android:inputType="text|textMultiLine"
        android:lines="8"
        android:maxLines="10"
        android:minLines="6"
        android:padding="@dimen/text_padding"
        android:scrollbars="vertical"
        android:textCursorDrawable="@drawable/color_cursor" />

    <Button
        android:id="@+id/product_generate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/generate_barcode_code"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginRight="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top"/>

</LinearLayout>