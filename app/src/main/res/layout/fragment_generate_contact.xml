<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.GenerateContactFragment">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_name"
        android:textSize="@dimen/text_vcard"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginRight="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/last_name"
        android:textSize="@dimen/text_vcard"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginRight="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone"
        android:textSize="@dimen/text_vcard"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginRight="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_text"
        android:textSize="@dimen/text_vcard"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginRight="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top" />
    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/website"
        android:textSize="@dimen/text_vcard"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginRight="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top" />

    <Button
        android:id="@+id/contact_generate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/generate_qr_code"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginRight="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top"/>

</LinearLayout>