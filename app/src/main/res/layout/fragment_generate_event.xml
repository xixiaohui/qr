<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.GenerateEventFragment">


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/event_title"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginRight="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/event_geo"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginRight="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_start"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_generate_margin"
            android:layout_marginTop="@dimen/item_generate_margin_top"
            android:layout_marginRight="@dimen/item_generate_margin"
            android:hint="@string/event_start" />
        <ImageView
            android:id="@+id/set_start_time"
            android:src="@drawable/baseline_access_time_black_48dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/item_generate_margin_top"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_end"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:hint="@string/event_end"
            android:layout_marginLeft="@dimen/item_generate_margin"
            android:layout_marginRight="@dimen/item_generate_margin"
            android:layout_marginTop="@dimen/item_generate_margin_top" />
        <ImageView
            android:id="@+id/set_end_time"
            android:src="@drawable/baseline_access_time_black_48dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/item_generate_margin_top"/>
    </LinearLayout>


<!--    <CalendarView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"/>-->
    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_content"
        android:textSize="@dimen/text_vcard"
        android:layout_marginLeft="@dimen/item_generate_margin"

        android:layout_marginTop="@dimen/item_generate_margin_top"/>

    <EditText
        android:id="@+id/input_content_event"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/textview_border"
        android:gravity="left|top"
        android:hint="content"
        android:inputType="text|textMultiLine"
        android:lines="8"
        android:maxLines="10"
        android:minLines="6"
        android:padding="@dimen/text_padding"
        android:scrollbars="vertical"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginRight="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top" />

    <Button
        android:id="@+id/event_generate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/generate_qr_code"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginRight="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top"/>


</LinearLayout>