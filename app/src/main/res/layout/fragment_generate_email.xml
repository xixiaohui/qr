<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.GenerateEmailFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textSize="@dimen/text_vcard"
        android:layout_marginLeft="@dimen/item_generate_margin"

        android:layout_marginTop="@dimen/item_generate_margin_top"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginRight="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_title"
        android:textSize="@dimen/text_vcard"
        android:layout_marginLeft="@dimen/item_generate_margin"

        android:layout_marginTop="@dimen/item_generate_margin_top"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginRight="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_content"
        android:textSize="@dimen/text_vcard"
        android:layout_marginLeft="@dimen/item_generate_margin"

        android:layout_marginTop="@dimen/item_generate_margin_top"/>

    <EditText
        android:id="@+id/input_content"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/textview_border"
        android:gravity="left|top"
        android:hint="content"
        android:inputType="text|textMultiLine"
        android:lines="8"
        android:maxLines="10"
        android:minLines="6"
        android:padding="@dimen/text_padding"
        android:scrollbars="vertical"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginRight="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top" />

    <Button
        android:id="@+id/email_generate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/generate_qr_code"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginRight="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top"/>

</LinearLayout>