<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.GenerateWifiFragment">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generate_ssid"
        android:textSize="@dimen/text_vcard"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_ssid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginRight="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generate_password"
        android:textSize="@dimen/text_vcard"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginRight="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generate_network_type"
        android:textSize="@dimen/text_vcard"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top"/>

    <Spinner
        android:id="@+id/choice_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sippner_height"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginRight="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top"
        android:dropDownWidth="match_parent"
        android:entries="@array/wifi_type"/>

    <Button
        android:id="@+id/wifi_generate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/generate_qr_code"
        android:layout_marginLeft="@dimen/item_generate_margin"
        android:layout_marginRight="@dimen/item_generate_margin"
        android:layout_marginTop="@dimen/item_generate_margin_top"/>

</LinearLayout>